<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".Registation_Activity">

    <EditText
        android:id="@+id/et_fname"
        android:layout_width="208dp"
        android:layout_height="39dp"
        android:layout_marginLeft="@dimen/activity_margin_left"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:layout_marginRight="@dimen/activity_margin_right"
        android:background="@drawable/backgroundforedittext"
        android:ems="10"
        android:hint="First Name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_lname"
        android:layout_width="210dp"
        android:layout_height="42dp"
        android:layout_marginLeft="@dimen/activity_margin_left"
        android:layout_marginTop="50dp"
        android:layout_marginRight="@dimen/activity_margin_right"
        android:background="@drawable/backgroundforedittext"
        android:ems="10"
        android:gravity="center"
        android:hint="Last Name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_fname" />

    <EditText
        android:id="@+id/et_eAddress"
        android:layout_width="208dp"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/activity_margin_left"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:layout_marginRight="@dimen/activity_margin_right"
        android:background="@drawable/backgroundforedittext"
        android:ems="10"
        android:hint="Email Address"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_lname" />

    <EditText
        android:id="@+id/et_mobileno"
        android:layout_width="212dp"
        android:layout_height="37dp"
        android:layout_marginLeft="@dimen/activity_margin_left"
        android:layout_marginTop="50dp"
        android:layout_marginRight="@dimen/activity_margin_right"
        android:background="@drawable/backgroundforedittext"
        android:ems="10"
        android:gravity="center"
        android:hint="10-digit Mobile Number"
        android:inputType="phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_eAddress" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="215dp"
        android:layout_height="37dp"
        android:gravity="center"
        android:layout_marginLeft="@dimen/activity_margin_left"
        android:layout_marginTop="50dp"
        android:layout_marginRight="@dimen/activity_margin_right"
        android:background="@drawable/backgroundforedittext"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_mobileno" />

    <Button
        android:id="@+id/btn_generateOtp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="50dp"
        android:gravity="center"
        android:background="@android:color/holo_purple"
        android:text="GENERATE OTP"
        android:textColor="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.463"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_password" />
</androidx.constraintlayout.widget.ConstraintLayout>